rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isDoctor() {
      return exists(/databases/$(database)/documents/doctors/$(request.auth.uid));
    }

    // Doctors Collection: Allow any signed-in user to read/list.
    // Allow any user who is a doctor to write to any doctor document.
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      allow write: if isDoctor();

      // Appointments subcollection for doctors
      // Allow any signed-in user to write an appointment for a doctor.
      // The doctor can read/delete their own appointments.
      match /appointments/{appointmentId} {
        allow write: if isSignedIn();
        allow read, delete: if isOwner(doctorId);
      }
    }

    // Patients Collection: Allow doctors to list/read, but only the owner to write.
    match /patients/{patientId} {
      allow list: if isDoctor();
      allow read: if isOwner(patientId) || isDoctor();
      allow write: if isOwner(patientId);

      // Subcollections for patients
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(patientId);
      }
      match /healthRecords/{healthRecordId} {
        allow read, write: if isOwner(patientId);
      }
    }
    
    // Calls collection for WebRTC
    match /calls/{callId} {
      allow read, write: if isSignedIn();
      
      match /offerCandidates/{candidateId} {
        allow create, read: if isSignedIn();
      }
      match /answerCandidates/{candidateId} {
        allow create, read: if isSignedIn();
      }
      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }
  }
}
