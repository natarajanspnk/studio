rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isDoctor() {
      return exists(/databases/$(database)/documents/doctors/$(request.auth.uid));
    }

    // Doctors Collection: Allow any signed-in user to read/list, but only the owner to write.
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      allow write: if isOwner(doctorId);

      // Appointments subcollection for doctors
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(doctorId);
      }
    }

    // Patients Collection: Allow doctors to list/read, but only the owner to write.
    match /patients/{patientId} {
      allow list: if isDoctor();
      allow read, write: if isOwner(patientId);

      // Subcollections for patients
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(patientId);
      }
      match /healthRecords/{healthRecordId} {
        allow read, write: if isOwner(patientId);
      }
    }
    
    // Calls collection for WebRTC
    match /calls/{callId} {
      allow read, write: if isSignedIn();
      
      match /offerCandidates/{candidateId} {
        allow create: if isSignedIn();
        allow read: if isSignedIn();
      }
      match /answerCandidates/{candidateId} {
        allow create: if isSignedIn();
        allow read: if isSignedIn();
      }
    }
  }
}