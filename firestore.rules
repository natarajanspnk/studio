
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isDoctor() {
      return exists(/databases/$(database)/documents/doctors/$(request.auth.uid));
    }

    // Doctors Collection: Allow any signed-in user to read/list and create a new doctor.
    // Only the doctor who owns the document can update or delete it.
    match /doctors/{doctorId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn(doctorId);

      // Appointments subcollection for doctors
      // Allow any signed-in user to write an appointment for a doctor.
      // The doctor can read/delete their own appointments.
      match /appointments/{appointmentId} {
        allow write: if isSignedIn();
        allow read, delete: if isOwner(doctorId);
      }
    }

    // Patients Collection: Allow any authenticated user to list patients.
    // A doctor can get any patient, a patient can only get their own.
    // A patient can only write to their own document.
    match /patients/{patientId} {
      allow list: if isSignedIn();
      allow get: if isDoctor() || isOwner(patientId);
      allow write: if isOwner(patientId);

      // Subcollections for patients
      match /appointments/{appointmentId} {
        allow read, write: if isOwner(patientId);
      }
      match /healthRecords/{healthRecordId} {
        // A patient can manage their own records. A doctor can read them.
        allow read: if isOwner(patientId) || isDoctor();
        allow write: if isOwner(patientId);
      }
    }
    
    // Calls collection for WebRTC
    match /calls/{callId} {
      allow read, write: if isSignedIn();
      
      match /offerCandidates/{candidateId} {
        allow create, read: if isSignedIn();
      }
      match /answerCandidates/{candidateId} {
        allow create, read: if isSignedIn();
      }
      match /messages/{messageId} {
        allow read, create: if isSignedIn();
      }
    }
    
    // Secure collection group queries
    match /{path=**}/appointments/{appointmentId} {
      allow list: if isDoctor();
    }
  }
}
