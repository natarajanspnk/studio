/**
 * @file
 * MedConnect Firestore Security Rules
 *
 * @core_philosophy
 * This ruleset enforces a strict user-ownership model for patient and doctor
 * profiles, ensuring that only the authenticated user can access their own data.
 * Appointments and HealthRecords are also secured under the user-ownership model,
 * nested under patient and doctor profile. WebRTC call signaling data is
 * accessible to any authenticated user.
 *
 * @data_structure
 * - /patients/{patientId}: Stores patient profile information.
 * - /doctors/{doctorId}: Stores doctor profile information.
 * - /patients/{patientId}/appointments/{appointmentId}: Stores patient appointments.
 * - /doctors/{doctorId}/appointments/{appointmentId}: Stores doctor appointments.
 * - /patients/{patientId}/healthRecords/{healthRecordId}: Stores patient health records.
 * - /calls/{callId}: Stores WebRTC signaling data.
 * - /calls/{callId}/offerCandidates/{candidateId}: Stores ICE candidates from the caller.
 * - /calls/{callId}/answerCandidates/{candidateId}: Stores ICE candidates from the callee.
 *
 * @key_security_decisions
 * - Users can only access their own profile data (patients and doctors).
 * - Appointments and HealthRecords are secured via user-ownership.
 * - WebRTC signaling data is accessible to any authenticated user.
 * - Listing of doctors is allowed for any signed-in user.
 *
 * @denormalization_for_authorization
 * - The `patientId` and `doctorId` are included in the appointment and health record documents
 *   to avoid costly `get()` calls in security rules.
 *
 * @structural_segregation
 * - Private data is stored under user-specific paths (e.g., /patients/{patientId}/...),
 *   ensuring that only the owner can access the data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows access to patient profile information.
     * @path /patients/{patientId}
     * @allow (create) - Authenticated user with UID 'user123' can create a profile at /patients/user123.
     * @allow (get, update, delete) - Authenticated user with UID 'user123' can get, update, or delete their profile at /patients/user123.
     * @deny (create) - Authenticated user with UID 'user456' cannot create a profile at /patients/user123.
     * @deny (get, update, delete) - Authenticated user with UID 'user456' cannot get, update, or delete the profile at /patients/user123.
     * @principle Enforces document ownership for reads and writes.
     */
    match /patients/{patientId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(patientId);
      allow list: if false;
      allow create: if isOwner(patientId) && request.resource.data.id == patientId;
      allow update: if isExistingOwner(patientId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(patientId);
    }

    /**
     * @description Allows access to doctor profile information.
     * @path /doctors/{doctorId}
     * @allow (create) - Authenticated user with UID 'user123' can create a profile at /doctors/user123.
     * @allow (get, update, delete) - Authenticated user with UID 'user123' can get, update, or delete their profile at /doctors/user123.
     * @deny (create) - Authenticated user with UID 'user456' cannot create a profile at /doctors/user123.
     * @deny (get, update, delete) - Authenticated user with UID 'user456' cannot get, update, or delete the profile at /doctors/user123.
     * @principle Enforces document ownership for reads and writes.
     */
    match /doctors/{doctorId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(doctorId);
      allow list: if isSignedIn();
      allow create: if isOwner(doctorId) && request.resource.data.id == doctorId;
      allow update: if isExistingOwner(doctorId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(doctorId);
    }

    /**
     * @description Allows access to appointments associated with a specific patient.
     * @path /patients/{patientId}/appointments/{appointmentId}
     * @allow (create) - Authenticated patient 'user123' can create an appointment under /patients/user123/appointments/appt1.
     * @allow (get, update, delete) - Authenticated patient 'user123' can get, update, or delete an appointment under /patients/user123/appointments/appt1.
     * @deny (create) - Authenticated patient 'user456' cannot create an appointment under /patients/user123/appointments/appt1.
     * @deny (get, update, delete) - Authenticated patient 'user456' cannot get, update, or delete an appointment under /patients/user123/appointments/appt1.
     * @principle Enforces document ownership for reads and writes.
     */
    match /patients/{patientId}/appointments/{appointmentId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(patientId);
      allow list: if isOwner(patientId);
      allow create: if isOwner(patientId) && request.resource.data.patientId == patientId;
      allow update: if isExistingOwner(patientId) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(patientId);
    }

    /**
     * @description Allows access to appointments associated with a specific doctor.
     * @path /doctors/{doctorId}/appointments/{appointmentId}
     * @allow (create) - Authenticated doctor 'doc123' can create an appointment under /doctors/doc123/appointments/appt1.
     * @allow (get, update, delete) - Authenticated doctor 'doc123' can get, update, or delete an appointment under /doctors/doc123/appointments/appt1.
     * @deny (create) - Authenticated doctor 'doc456' cannot create an appointment under /doctors/doc123/appointments/appt1.
     * @deny (get, update, delete) - Authenticated doctor 'doc456' cannot get, update, or delete an appointment under /doctors/doc123/appointments/appt1.
     * @principle Enforces document ownership for reads and writes.
     */
    match /doctors/{doctorId}/appointments/{appointmentId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(doctorId);
      allow list: if isOwner(doctorId);
      allow create: if isOwner(doctorId) && request.resource.data.doctorId == doctorId;
      allow update: if isExistingOwner(doctorId) && request.resource.data.doctorId == resource.data.doctorId;
      allow delete: if isExistingOwner(doctorId);
    }

    /**
     * @description Allows access to health records associated with a specific patient.
     * @path /patients/{patientId}/healthRecords/{healthRecordId}
     * @allow (create) - Authenticated patient 'user123' can create a health record under /patients/user123/healthRecords/record1.
     * @allow (get, update, delete) - Authenticated patient 'user123' can get, update, or delete a health record under /patients/user123/healthRecords/record1.
     * @deny (create) - Authenticated patient 'user456' cannot create a health record under /patients/user123/healthRecords/record1.
     * @deny (get, update, delete) - Authenticated patient 'user456' cannot get, update, or delete a health record under /patients/user123/healthRecords/record1.
     * @principle Enforces document ownership for reads and writes.
     */
    match /patients/{patientId}/healthRecords/{healthRecordId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
        return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(patientId);
      allow list: if isOwner(patientId);
      allow create: if isOwner(patientId) && request.resource.data.patientId == patientId;
      allow update: if isExistingOwner(patientId) && request.resource.data.patientId == resource.data.patientId;
      allow delete: if isExistingOwner(patientId);
    }

    /**
     * @description Allows any authenticated user to create or join a call.
     * @path /calls/{callId}
     * @allow (create) - Authenticated user 'user123' can create a call session.
     * @allow (get, list, update, delete) - Authenticated users can access call data.
     * @principle Allows open access for authenticated users.
     */
    match /calls/{callId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows any authenticated user to add ICE candidates from the caller.
     * @path /calls/{callId}/offerCandidates/{candidateId}
     * @allow (create) - Authenticated user 'user123' can add offer candidates.
     * @allow (get, list, update, delete) - Authenticated users can access candidate data.
     * @principle Allows open access for authenticated users.
     */
    match /calls/{callId}/offerCandidates/{candidateId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Allows any authenticated user to add ICE candidates from the callee.
     * @path /calls/{callId}/answerCandidates/{candidateId}
     * @allow (create) - Authenticated user 'user123' can add answer candidates.
     * @allow (get, list, update, delete) - Authenticated users can access candidate data.
     * @principle Allows open access for authenticated users.
     */
    match /calls/{callId}/answerCandidates/{candidateId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }
  }

  function isSignedIn() {
    return request.auth != null;
  }
}